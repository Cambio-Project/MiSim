{
  "microservices": [
    {
      "name": "gateway",
      "instances": 2,
      "capacity": 20,
      "loadbalancer_strategy": "even",
      "operations": [
        {
          "name": "gateway.PING",
          "demand": 2,
          "dependencies": []
        },
        {
          "name": "INTERNAL_DEP",
          "demand": 2,
          "dependencies": [
            {
              "service": "loon-service",
              "operation": "call_loon-service2"
            }
          ]
        },
        {
          "name": "EXTERNAL_DEP",
          "demand": 2,
          "dependencies": [
            {
              "service": "loon-service",
              "operation": "call_external_service"
            }
          ]
        },
        {
          "name": "gateway.DB_READ",
          "demand": 2,
          "dependencies": [
            {
              "service": "loon-service",
              "operation": "loon-service.DB_READ"
            }
          ]
        },
        {
          "name": "gateway.DB_WRITE",
          "demand": 2,
          "dependencies": [
            {
              "service": "loon-service",
              "operation": "loon-service.DB_WRITE"
            }
          ]
        },
        {
          "name": "UNAFFECTED_SERVICE",
          "demand": 2,
          "dependencies": [
            {
              "service": "loon-service2",
              "operation": "loon-service2.get"
            }
          ]
        }
      ],
      "patterns": [
        {
          "type": "retry",
          "config": {
            "maxTries": 6,
            "baseBackoff": 0.02,
            "maxBackoff": 1,
            "base": 2
          }
        }
      ]
    },
    {
      "name": "loon-service",
      "instances": 2,
      "patterns": [],
      "capacity": 15,
      "operations": [
        {
          "name": "loon-service.DB_WRITE",
          "demand": 5,
          "dependencies": []
        },
        {
          "name": "loon-service.DB_READ",
          "demand": 3,
          "dependencies": []
        },
        {
          "name": "call_loon-service2",
          "demand": 4,
          "dependencies": [
            {
              "service": "loon-service2",
              "operation": "loon-service2.get"
            }
          ]
        },
        {
          "name": "call_external_service",
          "demand": 10,
          "dependencies": []
        }
      ]
    },
    {
      "name": "loon-service2",
      "instances": 1,
      "patterns": [],
      "capacity": 10,
      "operations": [
        {
          "name": "loon-service2.get",
          "demand": 5,
          "dependencies": []
        }
      ]
    }
  ]
}